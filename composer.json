{
    "name": "bunkerdb/adapter-mysql",
    "description": "Implementation  over abstraction IAdapter for creating and execution Doctrine\\DBAL\\Connection instances over driver Mysql",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Ratia",
            "email": "cratia.github@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/BunkerDB/adapter-mysql"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "cratia/interface-adapter": ">=0.1",
        "cratia/adapter-sql-performance": ">=0.1",
        "ext-json": "*",
        "cratia/common-functions": ">=0.1",
        "bunkerdb/pipeline": ">=0.7"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Cratia\\ORM\\DBAL\\Adapter\\": "src/"
        }
    }
